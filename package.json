{
  "name": "vim-motions",
  "version": "1.0.0",
  "description": "A Vim motions cheat sheet.",
  "main": "src/js/main.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "build": "npm run copy:assets && npm run build:css",
    "copy:assets": "copyfiles -u 1 \"src/**/*.html\" src/js/**/*.js dist",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./dist/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "watch:assets": "onchange \"src/**/*.html\" \"src/js/**/*.js\" -- npm run copy:assets"
  },
  "keywords": [
    "vim",
    "cheatsheet"
  ],
  "author": "Linus Dinesj√∂",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.11"
  }
}
